@model List<OrderDetailModel>

@if (Model.Count > 0) {
  decimal total = 0;
  int stt = 1;
  
  <table class="table">
    <tr>
      <th>#</th>
      <th>Sản phẩm</th>
      <th>Giá</th>
      <th>Số lượng</th>
      <th>Thành tiền</th>
      <th></th>
    </tr>
    @foreach (var cartitem in Model)
    {
        var thanhtien = cartitem.Quantity * cartitem.Product.ProductPrice;
        total += (decimal)thanhtien;

        <tr>
           <td>@(stt++)</td>
           <td>@cartitem.Product.ProductName</td>
           <td>@(cartitem.Product.ProductPrice.ToString("n0"))</td>
           <td><input asp-for="@cartitem.Quantity" id="@($"quantity-{cartitem.Product.ProductId}")"/></td>
           <td>@(thanhtien.ToString("n0"))</td>
           <td>
              <button class="btn btn-success updatecartitem"data-productid="@cartitem.Product.ProductId">Update</button>
              <button class="btn btn-danger remove" data-productid="@cartitem.Product.ProductId">Xóa</button>
              @* <a href="@Url.Action("UpdateCart","Home",new {productid = @cartitem.Product.ProductId, quantity = @cartitem.Quantity})" class="btn btn-success">Update</a> *@
              @* <a class="btn btn-danger" href="@Url.Action("RemoveCart","Home",new {productid =@cartitem.Product.ProductId})">Remove</a> *@
           </td>
        </tr>
    }
      <tr>
          <td colspan="4" class="text-right">Tổng tiền</td>
          <td>@(total.ToString("n0"))</td>
          <td></td>
      </tr>
  </table>

  @* <a asp-controller="Product" asp-action="Checkout" class="btn btn-success">Gửi đơn hàng</a> *@
    
}
else {
  <p class="alert alert-danger">Giỏ hàng trống</p>
}
@section Scripts {
    <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).data("productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.Action("UpdateCart", "Home")",
                      data: {
                          productid: productid,
                          quantity:quantity
                      },
                      success: function (result) {
                          if (result.error){
                          alert(result.message);
                          return;
                          }
                          window.location.href = "@Url.Action("OrderDetail", "Home")";
                      },
                      fail: function(result) {
                         alert("Lỗi ERoRr")
                      } 
                  });
              });
          });
          $(document).ready(function () {
                        $(".remove").click(function (event) {
                            event.preventDefault();
                            var productid = $(this).data("productid");
                            $.ajax({
                                type: "POST",
                                url:"@Url.Action("RemoveCart","Home")",
                                data: {
                                    productid: productid,
                                },
                                success: function (result) {
                                    if (result.error){
                                    alert(result.message);
                                    return;
                                    }
                                    window.location.href = "@Url.Action("OrderDetail", "Home")";
                                },
                                fail: function(result) {
                                   alert("Lỗi ERoRr")
                                } 
                            });
                        });
                    });
        </script>
}
