@model eShop.WebApp.Models.CategoryModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2 class="display-4">Create Product</h2>
<form method="post" class="m-2 p-3 bg-light">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.CategoryName">Product Name</label>
        <input class="form-control" asp-for="@Model.CategoryName" required/>
        @* <span asp-validation-for="@Model.ProductName" class="text-danger"></span>   *@
    </div>
    <div class="form-group">
        <input class="btn btn-danger" type="submit" title="Create"/>
    </div>
</form>

