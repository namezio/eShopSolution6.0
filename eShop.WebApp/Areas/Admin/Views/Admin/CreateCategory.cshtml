@model eShop.WebApp.Areas.Admin.Models.CategoryModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2 class="display-4">Create Category</h2>
<form method="post" class="m-2 p-3 bg-light">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.CategoryName">Category Name</label>
        <input class="form-control" asp-for="@Model.CategoryName" required/>
    </div>
    <div class="form-group">
        <input class="btn btn-outline-success" type="submit" title="Create"/>
    </div>
</form>
