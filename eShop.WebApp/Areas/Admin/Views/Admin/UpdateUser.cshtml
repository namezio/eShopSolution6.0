@model eShop.Database.User?

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2 class="display-4">Update User</h2>
<form method="post" class="m-2 p-3 bg-light">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
                <input type="hidden" asp-for="@Model.UserId"/>
            </div>
    <div class="form-group">
        <label asp-for="@Model.UserEmail">User Email</label>
        <input class="form-control" type="email" asp-for="@Model.UserEmail" required/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserFirstName">First Name</label>
        <input class="form-control" asp-for="@Model.UserFirstName" required/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserLastName">Last Name</label>
        <input class="form-control" asp-for="@Model.UserLastName" required/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserPhone">Phone</label>
        <input class="form-control" asp-for="@Model.UserPhone" required/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserAddress">Address</label>
        <input class="form-control" asp-for="@Model.UserAddress" required/>
    </div>
    <div class="form-group">
        <input class="btn btn-outline-success" type="submit" title="Create"/>
    </div>
</form>

